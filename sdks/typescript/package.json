{
  "name": "@anthropic/claude-cli-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for the Claude CLI protocol",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "claude",
    "anthropic",
    "sdk",
    "cli",
    "ai"
  ],
  "license": "MIT"
}
